<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/activity_26sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#EF6C00</item>
        <item name="android:text">@string/score</item>

    </style>

    <style name="linearLayoutRowPlayer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewRowPlayer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/row_0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/row_12sp</item>
        <item name="android:layout_marginTop">@dimen/row_4dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="materialButtonRow" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/row_0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">@dimen/row_12sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">@dimen/row_4dp</item>
        <item name="android:radius">@dimen/row_2dp</item>
    </style>

    <style name="materialButtonActivity" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/activity_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/activity_18sp</item>
        <item name="android:textColor">#cc3333</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">@dimen/activity_8dp</item>
        <item name="android:layout_marginRight">@dimen/activity_8dp</item>
        <item name="android:layout_marginBottom">@dimen/activity_8dp</item>
        <item name="android:radius">@dimen/activity_2dp</item>
        <item name="android:background">@mipmap/reset_pts</item>
        <item name="android:text">@string/resetPTS</item>

    </style>
    <style name="materialButtonActivity2" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/activity_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/activity_18sp</item>
        <item name="android:textColor">#cc3333</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">@dimen/activity_8dp</item>
        <item name="android:layout_marginRight">@dimen/activity_8dp</item>
        <item name="android:layout_marginBottom">@dimen/activity_8dp</item>
        <item name="android:radius">@dimen/activity_2dp</item>
        <item name="android:background">@mipmap/reset_pts1</item>
        <item name="android:text">@string/resetPTS</item>

    </style>
    <style name="materialButtonActivity3" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/activity_0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">@dimen/activity_18sp</item>
        <item name="android:textColor">#cc3333</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">@dimen/activity_8dp</item>
        <item name="android:layout_marginRight">@dimen/activity_8dp</item>
        <item name="android:layout_marginBottom">@dimen/activity_8dp</item>
        <item name="android:radius">@dimen/activity_2dp</item>
        <item name="android:background">#37364c</item>
        <item name="android:text">@string/addPlayer</item>

    </style>
    <style name="editTextTeamNameA">
        <item name="android:layout_height">@dimen/activity_0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:hint">@string/insertTeam</item>
        <item name="android:gravity">top</item>
        <item name="android:textColorHint">#2E7D32</item>
        <item name="android:textColor">#2E7D32</item>
        <item name="android:layout_marginEnd">@dimen/activity_8dp</item>
        <item name="android:textSize">@dimen/activity_26sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="editTextTeamNameB">
        <item name="android:layout_height">@dimen/activity_0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:hint">@string/insertTeam</item>
        <item name="android:gravity">top</item>
        <item name="android:textColorHint">#EF6C00</item>
        <item name="android:textColor">#EF6C00</item>
        <item name="android:layout_marginEnd">@dimen/activity_8dp</item>
        <item name="android:textSize">@dimen/activity_26sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/activity_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">@string/playerNumber</item>
        <item name="android:inputType">number</item>
        <item name="android:background">#37364c</item>
        <item name="android:textSize">@dimen/activity_16sp</item>
        <item name="android:textColor">#cc3333</item>
        <item name="android:textColorHint">#cc3333</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">@dimen/activity_7dp</item>
        <item name="android:layout_marginRight">@dimen/activity_6dp</item>
    </style>

    <style name="listView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/activity_0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
