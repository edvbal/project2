<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:padding="@dimen/activity_5dp"
    android:windowSoftInputMode="adjustNothing"
    android:fillViewport="true"
    tools:context="com.example.android.project2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/activity_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/teamA"
                    style="@style/editTextTeamNameA"
                    />

                <TextView
                    android:id="@+id/scoreA"
                    style="@style/textView"
                    android:text="@string/score"
                    android:gravity="top"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#2E7D32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/activity_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/teamB"
                    style="@style/editTextTeamNameB" />

                <TextView
                    android:id="@+id/scoreB"
                    style="@style/textView"
                />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/activity_10dp"
                android:paddingBottom="@dimen/activity_5dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/resetScoresA"
                    style="@style/materialButtonActivity"
                     android:onClick="resetA"/>

                <Button
                    android:id="@+id/resetScoresB"
                    style="@style/materialButtonActivity2"
                    android:onClick="resetB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/activity_5dp"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/addPlayerA"
                    style="@style/materialButtonActivity3"
                    android:onClick="addPlayerA"

                    />

                <EditText
                    android:id="@+id/numberA"
                    style="@style/editText" />

                <EditText
                    android:id="@+id/numberB"
                    style="@style/editText" />

                <Button
                    android:id="@+id/addPlayerB"
                    style="@style/materialButtonActivity3"

                    android:onClick="addPlayerB" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/activity_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nrHeaderA"
                    style="@style/textViewRowPlayer"
                    android:textColor="#cc3333"

                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/ptsHeaderA"
                    style="@style/textViewRowPlayer"
                    android:textColor="#cc3333"

                    android:layout_weight="3" />

                <TextView
                    style="@style/textViewRowPlayer"
                    android:layout_weight="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/activity_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nrHeaderB"
                    style="@style/textViewRowPlayer"
                    android:textColor="#cc3333"

                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/ptsHeaderB"
                    android:textColor="#cc3333"

                    style="@style/textViewRowPlayer"
                    android:layout_weight="3" />

                <TextView
                    style="@style/textViewRowPlayer"
                    android:layout_weight="9" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/teamAList"
                style="@style/listView">

            </ListView>

            <ListView
                android:id="@+id/teamBList"
                style="@style/listView">

            </ListView>

        </LinearLayout>


    </LinearLayout>


</ScrollView>
