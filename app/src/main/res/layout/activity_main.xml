<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeaea"
    android:padding="@dimen/activity_padding16"
    android:windowSoftInputMode="adjustNothing"
    android:fillViewport="true"
    tools:context="com.example.android.project2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/activity_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/teamA"
                    style="@style/editTextTeamName"
                    android:layout_marginEnd="@dimen/activity_8dp"
                    android:hint="@string/insertTeam"
                    android:textColor="#82bc78" />

                <TextView
                    android:id="@+id/scoreA"
                    style="@style/textView"
                    android:text="@string/score"
                    android:textColor="#82bc78" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/activity_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/teamB"
                    style="@style/editTextTeamName"
                    android:layout_marginStart="@dimen/activity_8dp"
                    android:hint="@string/insertTeam"
                    android:textColor="#78a8bc" />

                <TextView
                    android:id="@+id/scoreB"
                    style="@style/textView"
                    android:text="@string/score"
                    android:textColor="#78a8bc" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/resetScoresA"
                    style="@style/materialButtonActivity"
                    android:background="#82bc78"
                    android:onClick="resetA"
                    android:text="@string/resetScores" />

                <Button
                    android:id="@+id/resetScoresB"
                    style="@style/materialButtonActivity"
                    android:background="#78a8bc"
                    android:onClick="resetB"
                    android:text="@string/resetScores" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addPlayerA"
                    style="@style/materialButtonActivity"
                    android:layout_weight="2"
                    android:background="#82bc78"
                    android:onClick="addPlayerA"
                    android:text="@string/addPlayer" />

                <EditText
                    android:id="@+id/numberA"
                    style="@style/editText"
                    android:layout_weight="1"
                    android:hint="@string/playerNumber"
                    android:inputType="number" />

                <Button
                    android:id="@+id/addPlayerB"
                    style="@style/materialButtonActivity"
                    android:layout_weight="2"
                    android:background="#78a8bc"
                    android:onClick="addPlayerB"
                    android:text="@string/addPlayer" />

                <EditText
                    android:id="@+id/numberB"
                    style="@style/editText"
                    android:layout_weight="1"
                    android:hint="@string/playerNumber"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/activity_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nrHeaderA"
                    style="@style/textViewRowPlayer"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/ptsHeaderA"
                    style="@style/textViewRowPlayer"
                    android:layout_weight="3" />

                <TextView
                    style="@style/textViewRowPlayer"
                    android:layout_weight="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/activity_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nrHeaderB"
                    style="@style/textViewRowPlayer"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/ptsHeaderB"
                    style="@style/textViewRowPlayer"
                    android:layout_weight="3" />

                <TextView
                    style="@style/textViewRowPlayer"
                    android:layout_weight="9" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/teamAList"
                style="@style/listView">

            </ListView>

            <ListView
                android:id="@+id/teamBList"
                style="@style/listView">

            </ListView>

        </LinearLayout>


    </LinearLayout>


</ScrollView>
