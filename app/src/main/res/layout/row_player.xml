<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/row_16dp"
    android:orientation="vertical">

    <LinearLayout style="@style/linearLayoutRowPlayer"
        android:layout_marginTop="@dimen/row_8dp">

        <TextView
            android:id="@+id/playerNumber"
            android:textColor="#cc3333"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"

            style="@style/textViewRowPlayer"
            android:layout_weight="2">

        </TextView>

        <TextView
            android:id="@+id/playerPTS"
            style="@style/textViewRowPlayer"
            android:layout_weight="3"
            android:textColor="#cc3333"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"

            android:text="@string/defaultPlayerPts" />

        <Button
            android:id="@+id/plusOne"
            style="@style/materialButtonRow"
            android:background="#37364c"
            android:textColor="#cc3333"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:text="@string/plusOne" />

        <Button
            android:id="@+id/plusTwo"
            android:background="#37364c"
            android:textColor="#cc3333"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"

            style="@style/materialButtonRow"
            android:text="@string/plusTwo" />


        <Button
            android:id="@+id/plusThree"
            android:background="#37364c"
            android:textColor="#cc3333"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"

            style="@style/materialButtonRow"
            android:text="@string/plusThree" />

    </LinearLayout>

    <LinearLayout style="@style/linearLayoutRowPlayer"
        android:paddingTop="5dp"

        android:layout_marginBottom="@dimen/row_8dp">

        <Button
            android:id="@+id/reset"
            android:background="#37364c"
            android:textColor="#cc3333"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"

            style="@style/materialButtonRow"
            android:text="@string/reset"

            />

        <Button
            android:id="@+id/undo"
            android:background="#37364c"
            android:textColor="#cc3333"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"

            style="@style/materialButtonRow"
            android:text="@string/undo" />

        <Button
            android:id="@+id/delete"
            android:background="#37364c"
            android:textColor="#cc3333"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"

            style="@style/materialButtonRow"
            android:text="@string/delete" />
    </LinearLayout>

</LinearLayout>